{
  "version": 2,
  "buildCommand": "echo 'Mobile PWA - no build needed'",
  "outputDirectory": ".",
  "public": ".",
  "routes": [
    {
      "src": "/(.*)\\.html$",
      "dest": "/$1.html"
    },
    {
      "src": "/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/sw.js",
      "dest": "/sw.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
